{
  "name": "gioamato/stateless-wordpress",
  "description": "Stateless WordPress (K8s Ready)",
  "repositories": [
    {
      "type":"composer",
      "url":"https://wpackagist.org",
      "only": ["wpackagist-plugin/*", "wpackagist-theme/*"]
    }
  ],
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "inpsyde/wp-translation-downloader": true
    }
  },
  "require": {
    "inpsyde/wp-translation-downloader": "^2.0",
    "johnpbloch/wordpress-core": "5.9.2",
    "wpackagist-plugin/nginx-cache": "1.0.5",
    "wpackagist-plugin/windows-azure-storage": "4.3.2",
    "wpackagist-plugin/wp-stateless": "3.1.0",
    "wpackagist-theme/twentytwentytwo": "1.1"
  },
  "extra": {
    "wp-translation-downloader": {
      "languages": [
          "it_IT"
      ],
      "directory": "wp-content/languages"
    }
  }
}
